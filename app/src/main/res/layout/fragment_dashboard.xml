<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello,"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dashboard_display_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="new user"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"/>



        <TextView
            android:id="@+id/dashboard_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="email"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textColor="@color/scarlet"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="20dp"/>

        <TextView
            android:id="@+id/dashboard_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="username not yet set"
            android:layout_marginBottom="30dp"
            android:textSize="20sp"
            android:textColor="@color/scarlet"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_person_grey"
            android:drawablePadding="20dp"/>


        <Button
            android:id="@+id/dashboard_sign_out_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/scarlet"
            android:text="Sign out"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/dashboard_edit_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/scarlet"
            android:text="Edit User Profile"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/dashboard_edit_password_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/scarlet"
            android:text="Change Password"
            android:textColor="@color/white"/>


    </LinearLayout>

</LinearLayout>